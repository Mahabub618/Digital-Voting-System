<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn">

    <TextView
        android:id="@+id/reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="43dp"
        android:text="Register"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="50sp"
        android:textStyle="bold"
        android:typeface="sans"></TextView>

    <EditText
        android:id="@+id/voterName"
        android:layout_width="250dp"
        android:layout_height="51dp"
        android:layout_below="@+id/reg"
        android:layout_centerInParent="true"
        android:layout_marginBottom="36dp"
        android:hint="Voter Name"
        android:textAlignment="center"
        android:textSize="18sp">

    </EditText>

    <EditText
        android:id="@+id/voterPhone"
        android:layout_width="250dp"
        android:layout_height="51dp"
        android:layout_below="@+id/voterName"
        android:layout_centerInParent="true"
        android:layout_marginBottom="36dp"
        android:hint="Phone"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="18sp">

    </EditText>

    <EditText
        android:id="@+id/NidNumber"
        android:layout_width="250dp"
        android:layout_height="51dp"
        android:layout_below="@+id/voterPhone"
        android:layout_centerInParent="true"
        android:layout_marginBottom="36dp"
        android:hint="NID Number"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="18sp"></EditText>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/RegisterPassword"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_below="@+id/NidNumber"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="36dp"
        android:paddingBottom="5dp"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="60dp"
            android:paddingBottom="20dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ConfirmPassword"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_below="@+id/RegisterPassword"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="36dp"
        android:paddingBottom="5dp"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingLeft="60dp"
            android:paddingBottom="20dp" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/submit"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/ConfirmPassword"
        android:layout_centerInParent="true"
        android:layout_marginBottom="36dp"
        android:background="@color/btnSignActive"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold">

    </Button>

</RelativeLayout>